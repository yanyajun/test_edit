<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.example.administrator.test_edit.TimeLineEditor2
        android:id="@+id/time_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_centerInParent="true"
        android:background="@color/colorAccent"
        android:visibility="gone"/>


    <com.example.administrator.test_edit.DragLayout
        android:id="@+id/drag_layout"
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:background="#00000000"
        android:clickable="true"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:background="#000000"
            android:visibility="gone">
        </RelativeLayout>
    </com.example.administrator.test_edit.DragLayout>

    <com.example.administrator.test_edit.DragView
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary"
        android:visibility="gone"/>

    <com.example.administrator.test_edit.CutAudioView
        android:id="@+id/cut_audio_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@color/colorPrimary" />
</RelativeLayout>
